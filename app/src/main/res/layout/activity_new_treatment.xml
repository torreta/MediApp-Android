<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mediapp.ft.mediapp.NewTreatmentActivity"
    android:baselineAligned="false">

    <ScrollView android:id="@+id/new_treatment_form" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout android:id="@+id/new_treatment_form_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/t_name"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="@string/medication"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/t_finish"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="date"
                android:hint="@string/finish"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/t_hour"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="time"
                android:hint="@string/hour"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/t_frequency"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="number"
                android:hint="@string/frequency"
                />

            <Button android:id="@+id/btn_add" style="?android:textAppearanceSmall"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="16dp" android:text="@string/add"
                android:textStyle="bold"
                android:onClick="addTreatment"
                />

            <Button android:id="@+id/btn_back" style="?android:textAppearanceSmall"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="16dp" android:text="@string/back"
                android:textStyle="bold"
                android:onClick="goMain"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
